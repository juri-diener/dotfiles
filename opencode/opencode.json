{
  "$schema": "https://opencode.ai/config.json",
  "theme": "system",
  "autoupdate": true,
  "permission": {
    "bash": {
      "*install*": "deny",
      "*uninstall*": "deny",
      "*rm*": "deny",
      "*rmdir*": "deny",
      "*del*": "deny",
      "amplify*": "deny",
      "git*": "ask",
      "grep": "allow",
      "glob": "allow",
      "*": "allow"
    }
  }
}
